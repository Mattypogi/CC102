#include <iostream>

using namespace std;

int main() {
    int rows, columns;

    cout << "Enter the number of rows: ";
    cin >> rows;

    for (int i = 1; i <= rows; i++) {
        for (int k = rows - i; k > 0; k--) 
            cout << " ";

        for (int j = 1; j <= i; j++) {
            cout << j ;
        }

        cout << endl;
    }

    return 0;
}